int main()
{
    setlocale(LC_ALL, "Russian");
    bool p = 0;
    const int n = 8;
    const int m = 7;
    const int d = 21;
    float mas[n][m];
    int i, j, t;

    std::cout << "Исходная матрица" << std::endl;
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            p = rand() % 2;
            mas[i][j] = rand() % d;
            if (p == 1)mas[i][j] = rand() % d*-1;
            std::cout << mas[i][j] << ' ';
        }
