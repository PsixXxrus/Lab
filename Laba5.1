                min = mas[i][j];
        }
    }

	for (int t = 0; t <n; ++t)
		for (int i = 0; i <m - 1; ++i)
			for (int j = 0; j<m - 1 - i; ++j)
			{
				if (mas[t][j]>mas[t][j + 1])
				{
					float tmp = mas[t][j];
					mas[t][j] = mas[t][j + 1];
					mas[t][j + 1] = tmp;
				}
			}
	cout << "Готовая,отсортированная матрица" << endl;
	for (i = 0; i < n; i++)
	{
		for (j = 0; j < m; j++)
		{
			cout << mas[i][j] << ' ';
		}
